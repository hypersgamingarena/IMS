@model IEnumerable<IMS.Models.PurchaseHistory>
@{
    ViewData["Title"] = "Purchase History";
}
<h2>Purchase History</h2>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>â‚¹@item.Total</td>
            </tr>
        }
    </tbody>
</table> 