@model IEnumerable<IMS.Models.VendorOrder>
@{
    ViewData["Title"] = "Vendor Orders";
}
<h2>Vendor Orders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.ProductName</td>
                <td>@order.Quantity</td>
                <td>@order.Status</td>
                <td>
                    <form method="post" action="/Vendor/FulfillOrder">
                        <input type="hidden" name="orderId" value="@order.OrderId" />
                        <button type="submit" class="btn btn-primary">Fulfill</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table> 